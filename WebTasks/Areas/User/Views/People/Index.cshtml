@model IEnumerable<WebTasks.Areas.User.Models.ViewModels.PersonVm>

@{
    ViewBag.Title = "People";
}

<h2>Find People</h2>

@using (Ajax.BeginForm("Index", "People", new { page = 1, filter = "" }, new AjaxOptions
{   //GetPatients is name of method in PatientController
    InsertionMode = InsertionMode.Replace, //target element(#patientList) will be replaced
    UpdateTargetId = "tb-people",
    LoadingElementId = "loader" // div with .gif loader - that is shown when data are loading
}))
{
    string filter = "";
    <div class="form-group">
        @Html.Label("Filter", htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(x => filter, new { htmlAttributes = new { @class = "form-control", placeholder = "Type here" } })
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Search" />
    </div>
}

<div id="loader" class=" aletr" style="display:none">
    Loading...<img src="https://upload.wikimedia.org/wikipedia/commons/b/b1/Loading_icon.gif" width="40px" height="40px" />
</div>

@Html.Partial("PeopleTable") @* this is view with patient table. Same view you will return from controller *@

