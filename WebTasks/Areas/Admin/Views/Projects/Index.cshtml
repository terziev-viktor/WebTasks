@model IEnumerable<WebTasks.Areas.Admin.Models.ViewModels.ProjectAdminVm>

@{
    ViewBag.Title = "Projects";
    ViewBag.CurrentPage = 1;
}

<h2>All Projects in the application</h2>

@using (Ajax.BeginForm("Filter", "Projects", new { page = 1, filter = "" }, new AjaxOptions
{   
    HttpMethod = "GET",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "to-update",
    LoadingElementId = "loader" // div with .gif loader - that is shown when data are loading
}, new { id = "frmDailyTasks" }))
{
    string filter = "";
    <div class="form-group">
        @Html.Label("Search for a project", htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(x => filter, new { htmlAttributes = new { @class = "form-control", placeholder = "Type here" } })
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Search" />
    </div>
}

@Html.Partial("Loader")


<p>
    @Html.ActionLink("Create New", "Create")
</p>

@* Table for projects with pagination *@

<div id="to-update">
    @Html.Partial("ProjectsPartial", Model)
</div>

