@model IEnumerable<WebTasks.Models.ViewModels.PersonVm>

@{
    ViewBag.Title = "People";
}

<h2>Find People</h2>

@using (Ajax.BeginForm("Index", "People", new { page = 1, filter = "" }, new AjaxOptions
{  
    InsertionMode = InsertionMode.Replace, 
    UpdateTargetId = "tb-people",
    LoadingElementId = "loader" // div with .gif loader - that is shown when data are loading
}))
{
    string filter = "";
    <div class="form-group">
        @Html.Label("Filter", htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(x => filter, new { htmlAttributes = new { @class = "form-control", placeholder = "Type here" } })
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Search" />
    </div>
}

@Html.Partial("Loader")


@Html.Partial("PeopleTable") @* this is view with patient table. Same view you will return from controller *@

