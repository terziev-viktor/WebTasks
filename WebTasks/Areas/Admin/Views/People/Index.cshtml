@model IEnumerable<WebTasks.Models.ViewModels.PersonVm>

@{
    ViewBag.Title = "People";
    ViewBag.CurrentPage = 1;
}

<h2>Find People</h2>

@using (Ajax.BeginForm("Filter", "People", new { page = 1, filter = "" }, new AjaxOptions
{  
    HttpMethod = "GET",
    InsertionMode = InsertionMode.Replace, 
    UpdateTargetId = "tb-people",
    LoadingElementId = "loader"
}))
{
    string filter = "";
    <div class="form-group">
        @Html.Label("Filter", htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(x => filter, new { htmlAttributes = new { @class = "form-control", placeholder = "Type here" } })
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Search" />
    </div>
}

@Html.Partial("Loader")

@Html.Partial("PeoplePartial", Model)
